---
// contacto.astro
import MainLayout from "../layouts/MainLayout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

const pageTitle = "Contacto - Organizadora de Eventos";
const pageDescription = "Ponte en contacto con nosotros para cotizar tu evento.";
---
<MainLayout title={pageTitle} description={pageDescription}>
  <Navbar slot="navbar" />

  <section class="pt-28 max-w-6xl mx-auto px-4 animate-fadeIn">
    <h1 class="text-3xl md:text-4xl font-bold text-red-500 mb-6 text-center">Contáctanos</h1>
    <p class="mb-6 text-sm md:text-base text-center max-w-2xl mx-auto">
      Queremos ser parte de tu próximo evento. Llámanos, escríbenos por WhatsApp o completa el formulario.
    </p>
  </section>

  <!-- Formulario -->
  <section class="max-w-6xl mx-auto px-4 py-12 grid md:grid-cols-2 gap-8 animate-slideUp">
    <form action="https://wa.me/5219616546575" method="get" target="_blank" class="bg-white p-6 rounded shadow-lg flex flex-col gap-4 hover:-translate-y-1 transition">
      <input type="text" name="name" placeholder="Nombre" required class="border rounded px-3 py-2 w-full" />
      <input type="email" name="email" placeholder="Correo electrónico" required class="border rounded px-3 py-2 w-full" />
      <textarea name="message" placeholder="Mensaje" required class="border rounded px-3 py-2 w-full h-28"></textarea>
      <button type="submit" class="bg-red-500 text-white py-2 rounded hover:bg-red-600 transition">Enviar a WhatsApp</button>
    </form>

    <div class="flex flex-col gap-6">
      <img src="/img/mapa.webp" alt="Ubicación" class="w-full h-48 md:h-64 object-cover rounded-lg shadow" />
      <a href="https://maps.app.goo.gl/3VxekZLUdcp4w7cD6" target="_blank" class="text-red-500 hover:underline text-sm md:text-base">Ver en Google Maps</a>
      <div>
        <h3 class="font-bold text-lg mb-2">Horarios</h3>
        <p class="text-sm md:text-base">Lunes a Viernes: 9:00 AM - 6:00 PM</p>
        <p class="text-sm md:text-base">Sábado: 10:00 AM - 2:00 PM</p>
      </div>
      <div class="flex space-x-4">
      <a href="https://facebook.com" target="_blank" aria-label="Facebook" class="hover:scale-110 transition">
        <img src="/img/facebook.webp" alt="Facebook" class="w-6 h-6" />
      </a>
      <a href="https://instagram.com" target="_blank" aria-label="Instagram" class="hover:scale-110 transition">
        <img src="/img/instagram.webp" alt="Instagram" class="w-6 h-6" />
      </a>
      <a href="https://tiktok.com" target="_blank" aria-label="TikTok" class="hover:scale-110 transition">
        <img src="/img/tiktok.webp" alt="TikTok" class="w-6 h-6" />
      </a>
    </div>
    </div>
  </section>

  <Footer slot="footer" />
</MainLayout>